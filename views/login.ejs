    <div class="login-box">
        <h1>Login</h1>
        <form action="#">
            <label>Email</label>
            <input type="email" name="email" placeholder="" />
            <label>Password</label>
            <input type="password" name = "password" placeholder="" />
          <center><button>Submit</button></center> 
        </form>
    </div>
    <p class="para-2">
